<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray200"
    android:orientation="vertical"
    tools:context=".feature.dashboard.DashboardFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_userAct_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="1dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_tiny">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/location_name" />

                <TextView
                    android:id="@+id/lbl_dash_locationName"
                    android:layout_width="100dp"
                    android:layout_height="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_tiny">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/lbl_dash_technician_name"
                    android:layout_width="100dp"
                    android:layout_height="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_tiny">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/customer" />

                <TextView
                    android:id="@+id/lbl_dash_customer"
                    android:layout_width="100dp"
                    android:layout_height="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_tiny">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/phone_pic" />

                <TextView
                    android:id="@+id/lbl_dash_picPhone"
                    android:layout_width="100dp"
                    android:layout_height="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small_1"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_semi_medium">

                <ImageButton
                    android:id="@+id/imgB_dash_toActivity"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="@dimen/spacing_small_1"
                    android:background="@drawable/ic_circle_selector"
                    android:contentDescription="@string/content_desc"
                    android:src="@drawable/ic_truck_32" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_dash_bottom"
        android:layout_below="@+id/card_view_userAct_1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_dash_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/lbl_dash_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/alph_size_small"
            android:text="@string/empty_data" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_dash_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_small_1"
        android:background="@color/colorWhite"
        android:padding="@dimen/spacing_semi_medium">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_tiny"
            android:layout_toLeftOf="@+id/imgB_dash_confirm"
            android:gravity="center"
            android:text="Mohon dilakukan pengecekan kembali sebelum Upload"
            android:textColor="@color/colorBlack" />

        <ImageButton
            android:id="@+id/imgB_dash_confirm"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/spacing_small_1"
            android:background="@drawable/ic_circle_selector"
            android:contentDescription="@string/content_desc"
            android:src="@drawable/ic_white_upload_32" />

    </RelativeLayout>


</RelativeLayout>