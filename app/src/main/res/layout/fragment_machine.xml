<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray200"
    android:orientation="vertical"
    tools:context=".feature.machine.MachineFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="1dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/machine_lccation"
                    android:layout_gravity="center"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/ColorBlue"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:id="@+id/spinner_machine_location"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/machine_qty"
                    android:layout_gravity="center"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/ColorBlue"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:id="@+id/spinner_machine_qty"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/machine_id"
                    android:layout_gravity="center"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/ColorBlue"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:id="@+id/spinner_machine_id"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/access"
                    android:layout_gravity="center"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/ColorBlue"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:id="@+id/spinner_machine_access"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_semi_medium"
                android:gravity="end"
                android:layout_marginBottom="@dimen/spacing_small_1"
                android:orientation="horizontal">

                <ImageButton
                    android:contentDescription="@string/content_desc"
                    android:id="@+id/imgB_problem_submit"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="@dimen/spacing_small_1"
                    android:background="@drawable/ic_circle_selector"
                    android:src="@drawable/ic_save_24"/>

                <ImageButton
                    android:contentDescription="@string/content_desc"
                    android:id="@+id/imgB_problem_cancel"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/ic_circle_transparent_selector"
                    android:src="@drawable/ic_cancel"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>