<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.connection.ConnectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="1dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="7dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ln_conn_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorBlueMantab"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_marginStart="@dimen/alph_size_tiny"
                        android:text="@string/conn_type"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/alph_size_small_2"
                        android:textStyle="bold" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_conn_type"
                    android:layout_below="@+id/ln_conn_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_tiny">

                    <RadioButton
                        android:id="@+id/rb_conn_vsat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:checked="true"
                        android:text="@string/vsat" />

                    <RadioButton
                        android:id="@+id/rb_conn_m2m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m2m" />

                </RadioGroup>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_conn_vsat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="1dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="7dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorBlueMantab"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_marginStart="@dimen/alph_size_tiny"
                        android:text="@string/io_equipment"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/alph_size_small_2"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_modem"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatModem"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_adaptor"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatAdaptor"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_fh"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatFh"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_lnb"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatLnb"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_rfu"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatRfu"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_diplexer_odu"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatOdu"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:baselineAligned="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/sn_diplexer_idu"
                        android:textColorHint="@color/colorBlack">

                        <EditText
                            android:id="@+id/txt_conn_vsatIdu"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_black_setting_16"
                            android:inputType="text"
                            android:maxLength="25"
                            android:maxLines="2"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="@string/diameter_antena"
                        android:layout_gravity="center"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/ColorBlue"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        android:id="@+id/spinner_conn_antena"/>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>